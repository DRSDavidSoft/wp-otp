{
    "name": "noplanman/wp-otp",
    "type": "wordpress-plugin",
    "description": "OTP for WordPress",
    "keywords": ["otp", "totp", "plugin", "wordpress"],
    "license": "GPL-2.0",
    "homepage": "https://github.com/noplanman/wp-otp",
    "support": {
        "issues": "https://github.com/noplanman/wp-otp/issues",
        "source": "https://github.com/noplanman/wp-otp"
    },
    "authors": [
        {
            "name": "Armando LÃ¼scher",
            "email": "armando@noplanman.ch",
            "homepage": "https://noplanman.ch",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "package",
            "package": {
                "type": "metapackage",
                "name": "_dummy_wp",
                "description": "Replace any required packages with a dummy.",
                "version": "dev-master",
                "replace": {
                    "paragonie/random_compat": "*"
                }
            }
        }
    ],
    "require": {
        "php": "^5.5|^7.0",
        "_dummy_wp": "@dev",
        "spomky-labs/otphp": "^8.3"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.3",
        "wp-coding-standards/wpcs": "^1.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.4.4"
    },
    "scripts": {
        "check-code": [
            "vendor/bin/phpcs --standard=phpcs.xml"
        ]
    }
}
